<h2 class="text-center">Mes expériences pro</h2>
<% first_id =  @workexperiences.first.id %>
<div class="rounded w-2/3 mx-auto mt-4 flex section justify-evenly" data-controller="tabdisplay">
  <ul id="tabs" class="pt-2 px-1  w-1/5 inline">
  <%= %>
    <% @workexperiences.each do |exp| %>
        <% if exp.id == first_id  %>
          <li class="gradient-text px-4 font-semibold py-2 border-gradient rounded-t-mb-px border-gradient">
            <a id="default-tab" href="#<%= exp.clientname %>"><%= exp.clientname %></a>
          </li>
          <% else %>
          <li class="px-4 font-semibold py-2 white-tab">
            <a id="default-tab" href="#<%= exp.clientname %>"><%= exp.clientname %></a>
          </li>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div id="tab-contents" class="w-3/4">
    <% @workexperiences.each do |exp| %>
      <% if exp.id == first_id %>
        <div class="p-4" id="<%= exp.clientname %>">
      <% else  %>
        <div class="p-4 hidden" id="<%= exp.clientname %>">
      <% end %>
          <p><%= exp.interval %></p>
          <p class="gradient-text bold"><%= exp.role %></p>
          <p class="pb-5"><%= exp.description %></p>
          <hr/>
          <ul class="list-colored">
            <% exp.feature.each do |feature| %>
              <li><%= feature %></li>
            <% end %>
          </ul>

        </div>
    <% end %>
    </div>
  </div>
</div>



<h2 class="text-center">Mes réalisations</h2>
<div id="realisations" class="section">
  <div class="project-cards">
    <% @projects.each_with_index do |project, index| %>
      <div class="project-card flex justify-evenly pb-5 mt-16">
      <% if index.even? %>
        <%= image_tag project.imgurl, { :class=>"w-1/3 h-fit" } %>
      <% end  %>
        <div class="text-left w-1/3">
        <div class="flex justify-between">
          <h3><%= project.projectname %></h3>
          <div class="flex">
            <% if project.githublink.length != 0 %>
              <a class="ml-7" href =<% project.githublink  %>>
                <img src=<%= image_path("github-logo.png")%> alt="photo" class="w-8">
              </a>
            <% end %>
            <% if project.weblink.length != 0 %>
              <a href =<% project.weblink  %> class="ml-7">
                <img src=<%= image_path("logo-internet.png")%> alt="photo" class="w-8">
              </a>
            <% end %>
          </div>
        </div>
          <div class="greyblue-bg my-7 p-3 rounded-xs"><p><%= project.context %></p></div>
          <p><%= project.projecttype %></p>
          <ul class="list-colored pb-5">
          <% project.features.each do |feature| %>
            <li class="px-5"><%= feature .tr(',', ' ')%></li>
          <% end %>
          </ul>
          <hr/>
          <ul class="inline-flex justify-evenly">
          <% project.codetags.each do |tag| %>
            <li class="px-5 text-xs font-bold"><%= tag .tr(',', ' ')%></li>
          <% end %>
          </ul>
        </div>
        <% if index.odd? %>
          <%= image_tag project.imgurl, { :class=>"w-1/3 h-fit" } %>
        <% end  %>
      </div>
    <% end %>
  </div>
</div>

