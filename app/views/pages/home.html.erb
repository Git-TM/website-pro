<%# Formulaire de contact%>
<div id="contact" class="section">
  <h2 class="py-3">Contactez moi</h2>
  <div class="form-container">
    <div class="form-contact">
      <%= simple_form_for (@contact) do |f| %>
        <div class="form-row">
          <div class="col">
            <%= f.input :firstname, as: :string, class:"form-control input-type" %>
          </div>
          <div class="col">
            <%= f.input :name, as: :string, class:"form-control  input-type" %>
          </div>
        </div>
        <div class="form-row">
          <div class="col">
            <%= f.input :email, as: :string, class:"form-control  input-type" %>
          </div>
          <div class="col">
            <%= f.input :company, as: :string, class:"form-control  input-type" %>
          </div>
        </div>
        <%= f.input :message, as: :text, class:"input-type" %>
        <%= f.button :submit, class: "primary-button dark-button", value: "Valider ma demande"%>
      <% end %>
    </div>
  </div>
</div>
