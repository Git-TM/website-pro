<%= render "experience" %>



<h2 class="text-center">Mes expériences</h2>
<% first_id =  @workexperiences.first.id %>
<div class="rounded w-2/3 mx-auto mt-4 flex section" data-controller="tabdisplay">
  <ul id="tabs" class="pt-2 px-1  w-1/4 inline">
  <%= %>
    <% @workexperiences.each do |exp| %>
        <% if exp.id == first_id  %>
          <li class="gradient-text px-4 text-gray-800 font-semibold py-2 border-b rounded-t-mb-px">
            <a id="default-tab" href="#<%= exp.clientname %>"><%= exp.clientname %></a>
          </li>
          <% else %>
          <li class="px-4 text-gray-800 font-semibold py-2 rounded-t">
            <a id="default-tab" href="#<%= exp.clientname %>"><%= exp.clientname %></a>
          </li>
        <% end %>
      </li>
    <% end %>
  </ul>

  <div id="tab-contents">
    <% @workexperiences.each do |exp| %>
      <% if exp.id == first_id %>
        <div class="p-4" id="<%= exp.clientname %>">
      <% else  %>
        <div class="p-4 hidden" id="<%= exp.clientname %>">
      <% end %>
          <p><%= exp.interval %></p>
          <p class="gradient-text bold"><%= exp.role %></p>
          <p class="pb-5"><%= exp.description %></p>
          <hr class="pb-5">
          <ul class="list-colored">
            <% exp.feature.each do |feature| %>
              <li><%= feature %></li>
            <% end %>
          </ul>

        </div>
    <% end %>
    </div>
  </div>
</div>

<h2 class="text-center">Mes réalisations</h2>
<div id="realisations" class="section">
  <div class="project-cards">

    <% @projects.each do |project| %>
      <div class="project-card flex justify-center pb-5">
        <%= image_tag project.imgurl, { :class=>"w-1/3" } %>
        <div class="project-desc text-right">
          <h3><%= project.projectname %></h3>
          <p><%= project.context %></p>
          <p><%= project.projecttype %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# Formulaire de contact%>
<div id="contact" class="section">
  <h2 class="py-3">Contactez moi</h2>
  <div class="form-container">
    <div class="form-contact">
      <%= simple_form_for (@contact) do |f| %>
        <div class="form-row">
          <div class="col">
            <%= f.input :firstname, as: :string, class:"form-control input-type" %>
          </div>
          <div class="col">
            <%= f.input :name, as: :string, class:"form-control  input-type" %>
          </div>
        </div>
        <div class="form-row">
          <div class="col">
            <%= f.input :email, as: :string, class:"form-control  input-type" %>
          </div>
          <div class="col">
            <%= f.input :company, as: :string, class:"form-control  input-type" %>
          </div>
        </div>
        <%= f.input :message, as: :text, class:"input-type" %>
        <%= f.button :submit, class: "primary-button dark-button", value: "Valider ma demande"%>
      <% end %>
    </div>
  </div>
</div>

