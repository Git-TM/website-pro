
<div id="modal-window-<%=project.id%>" class="modal" role="dialog" aria-labelledby="show" aria-hidden="true">
  <div class="modal-content" role="document">

    <div class="modal-title text-center mb-1">
      <%= submit_tag 'X', :type => :reset, :class => "close-modal", "data-dismiss" => "modal", "aria-hidden" => "true" %>
      <h2 class="gradient-text border-bottom pb-4"><%= project.projecttype %></h2>
    </div>
    <p class="text-center backblue"><%= project.context %></p>
    <div class="modal-photos-div d-flex justify-content-around">
      <img src=<%= image_path("mokup-tracking.png")%> class="photo-modal mr-3" />
      <img src=<%= image_path("mokup-website.png")%> class="photo-modal" />
    </div>

    <div class="modal-wrapper justify-content-between">
      <div class="modal-content-left">
        <h2 class="text-left"> Fonctionnalit√©s</h2>
        <ul>
        <% project.features.split(',').map(&:strip).each do |feature| %>
        <li><%= feature %></li>
        <% end %>
        </ul>
      </div>
      <div class="modal-content-right">
        <h2 > Technologies </h2>
        <div class="codetags-wrapper d-flex">
          <% project.codetags.split(',').map(&:strip).each do |tag| %>
            <div class="techno">
              <span class="techno-desc"><%= tag %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>


  </div>
</div>
